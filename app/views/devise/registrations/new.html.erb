<h2>新しいアカウントを作成</h2>
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレス", autocomplete: "email" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em></em>
    <% end %>
    <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, :placeholder => "パスワード確認", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
